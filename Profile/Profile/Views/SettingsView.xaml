<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Profile.Views.SettingsView" Title="Settings">
    <ContentPage.Content>
        <ScrollView Margin="10,10,10,10">
            <StackLayout>
                <Grid>
                    <Label Text="Enter password when logging in?" VerticalTextAlignment="Center" FontSize="9"/>
                    <Switch OnColor="Green" HorizontalOptions="EndAndExpand" IsToggled="{Binding EnterPasswordLogin}"/>
                    <Label Grid.Row="1" Text="Show Id number" FontSize="9"/>
                    <Switch OnColor="Green" HorizontalOptions="EndAndExpand" Grid.Row="1" IsToggled="{Binding ShowIDNumber}"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>