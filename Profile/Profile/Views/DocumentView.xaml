<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Profile.Views.DocumentView" Title="Documents">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10,10,10,10">
                <Label Text="Documents List page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Label Text="{Binding LabelFileName}"></Label>
                <ImageButton Source="attach_file.png" Command="{Binding AddFileCommand}" WidthRequest="30" HeightRequest="30" BackgroundColor="WhiteSmoke"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>